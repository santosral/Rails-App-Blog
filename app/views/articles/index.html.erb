<div class='table'>
  <%# method to produce each data %>
    <% @articles.each do |article| %>
      <h2 class="article-title"><%= article.name %></h2>
      <p class='body-font'><%= article.body %></p>
      <div class='button'>
      <button><%= link_to 'Show', article_show_path(article) %></button>
      <button><%= link_to 'Edit', article_edit_path(article) %></button>
      <button><%= link_to 'Delete', article_delete_path(article), method: :delete, data: { confirm: 'Are you sure?'} %></button>
      </div>
    <% end %>
</div>